.chatside
 .chatside__top
  .chatside__top--box
   %p.chatside__top--box__left
    = current_user.name
   %ul.chatside__top--box__menu
    %li.chatside__top--box__user
     =link_to new_group_path do
      = icon('fas','edit',class: 'icon')
    %li.chatside__top--box__edit
     =link_to edit_user_path(current_user) do
      = icon('fas','cog', class: 'icon' )
   
 
 
 .groups 
  - current_user.groups.each do |group|
   = link_to group_messages_path(group), class:"group" do
    %p.group--name
     = group.name
    %p.group--message
     = group.show_last_message


    